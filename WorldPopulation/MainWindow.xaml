        <ListBox x:Name="listboxNamesChosen" Height="235" Margin="305,47,660,502"></ListBox>
        <ScottPlot:WpfPlot x:Name="WpfPlot1" Margin="88,324,75,25" />
        <Button Content="Clear" FontSize="20" HorizontalAlignment="Left" Margin="1025,27,0,0" VerticalAlignment="Top" Height="40" Width="100" Cursor="Hand"/>
        <Button Content="Search" FontSize="20" HorizontalAlignment="Left" Margin="1025,80,0,0" VerticalAlignment="Top" Height="40" Width="100" Cursor="Hand"/>
    </Grid>
</Window>
